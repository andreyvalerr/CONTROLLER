# Пример конфигурации для Контроллера Криптокотла
# Скопируйте этот файл в .env и настройте под свое оборудование

# ===== ASIC КОНФИГУРАЦИЯ =====
# IP адрес ASIC майнера
ASIC_IP=192.168.0.127

# Порт API ASIC (обычно 4433 для зашифрованного соединения)
ASIC_PORT=4433

# Интервал обновления температуры (секунды)
TEMPERATURE_UPDATE_INTERVAL=1.0

# Таймаут подключения к ASIC (секунды)
ASIC_TIMEOUT=10.0

# ===== GPIO КОНФИГУРАЦИЯ =====
# GPIO пин для управления реле клапана
RELAY_PIN=17

# Режим GPIO (BCM или BOARD)
GPIO_MODE=BCM

# Состояние реле (True=HIGH, False=LOW)
RELAY_ON_STATE=True
RELAY_OFF_STATE=False

# Очистка GPIO при выходе
CLEANUP_GPIO_ON_EXIT=True

# ===== ТЕМПЕРАТУРНЫЕ НАСТРОЙКИ =====
# Максимальная температура для включения охлаждения (°C)
MAX_TEMP=55.0

# Минимальная температура для выключения охлаждения (°C)  
MIN_TEMP=45.0

# Гистерезис для предотвращения частых переключений (°C)
HYSTERESIS=2.0

# Критическая температура для аварийного режима (°C)
CRITICAL_TEMP=65.0

# Аварийная температура для немедленного отключения (°C)
EMERGENCY_TEMP=70.0

# ===== ВРЕМЕННЫЕ НАСТРОЙКИ =====
# Интервал работы контроллера клапанов (секунды)
CONTROL_INTERVAL=1.0

# Максимальное время охлаждения без перерыва (секунды)
MAX_COOLING_TIME=3600

# Минимальное время между переключениями клапана (секунды)
MIN_CYCLE_TIME=30

# Максимальное количество переключений в час
MAX_SWITCHES_PER_HOUR=60

# Таймаут аварийной ситуации (секунды)
EMERGENCY_TIMEOUT=300

# ===== ЛОГИРОВАНИЕ =====
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Файл основных логов
LOG_FILE=/var/log/crypto-controller.log

# Включить логирование в консоль
ENABLE_CONSOLE_LOG=True

# Включить статистику работы
ENABLE_STATISTICS=True

# Интервал вывода статистики (секунды)
STATS_INTERVAL=300

# ===== GUI НАСТРОЙКИ =====
# Полноэкранный режим (True/False)
GUI_FULLSCREEN=False

# Размер окна (ширина x высота)
GUI_WINDOW_WIDTH=800
GUI_WINDOW_HEIGHT=480

# Интервал обновления GUI (секунды)
GUI_UPDATE_INTERVAL=1.0

# ===== МОНИТОРИНГ =====
# Включить мониторинг производительности
ENABLE_PERFORMANCE_MONITORING=True

# Интервал проверки состояния системы (секунды)
HEALTH_CHECK_INTERVAL=60

# Максимальная загрузка CPU для предупреждения (%)
MAX_CPU_USAGE=80

# Максимальное использование памяти для предупреждения (%)
MAX_MEMORY_USAGE=85

# ===== БЕЗОПАСНОСТЬ =====
# Включить проверки безопасности
ENABLE_SAFETY_CHECKS=True

# Включить предупреждения
ENABLE_WARNINGS=True

# Автоматический перезапуск при критических ошибках
AUTO_RESTART_ON_CRITICAL_ERROR=True

# Максимальное количество попыток перезапуска
MAX_RESTART_ATTEMPTS=3

# ===== СЕТЬ =====
# Таймаут сетевых операций (секунды)
NETWORK_TIMEOUT=30

# Количество повторных попыток подключения
NETWORK_RETRY_COUNT=3

# Интервал между попытками подключения (секунды)
NETWORK_RETRY_INTERVAL=5

# ===== ДАННЫЕ =====
# Путь для сохранения данных
DATA_PATH=/home/user/CONTROLLER/data

# Путь для временных файлов
TEMP_PATH=/tmp/crypto-controller

# Максимальный размер файла логов (MB)
MAX_LOG_FILE_SIZE=100

# Количество архивных файлов логов
LOG_BACKUP_COUNT=5 